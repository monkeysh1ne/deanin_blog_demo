

<div class="container">
  <%= render @post %>
  <div>
    <div class="mb-2">
      <%= link_to "Edit this post", edit_post_path(@post), class: "link-secondary" %>
      <%= link_to "Back to posts", posts_path, class: "link-primary" %>
    </div>
    <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger btn-sm mb-4" %>
  </div>
</div>
<div class="container">
  <%= render 'comments/form',
   post: @post,
   comment: @post.comments.build,
   submit_label: "Reply"
    %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment
  %>
  <% end %>
</div>