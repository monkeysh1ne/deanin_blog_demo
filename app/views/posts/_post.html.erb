<div id="<%= dom_id post %>">
  <div class="card-title">
    <h3 class="text-uppercase"><%= post.title %></h3>
  </div>
  <div class="card-subtitle">
    <h6>Posted by: <%= link_to post.user.name, user_path(post.user) %></h6>
    <h6><%= pluralize(post.views, " view") %></h6>
  </div>
  <div class="card-text">
    <%= post.body %>
  </div>
</div>
